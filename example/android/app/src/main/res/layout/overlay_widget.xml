<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/overlay_background"
    android:padding="12dp"
    android:elevation="8dp">

    <!-- Main Status Row: Icon on left, text on right -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Activity Icon -->
        <ImageView
            android:id="@+id/overlay_activity_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@android:drawable/ic_menu_recent_history"
            android:tint="#2196F3"
            android:contentDescription="Activity icon"/>

        <!-- Status Info -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/overlay_self_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Me"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/overlay_self_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Idle"
                android:textColor="#E0E0E0"
                android:textSize="12sp"
                android:layout_marginTop="2dp"/>

            <!-- Connected Count Badge -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical">

                <View
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:background="@drawable/connection_indicator"/>

                <TextView
                    android:id="@+id/overlay_connected_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#4CAF50"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:layout_marginStart="6dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" connected"
                    android:textColor="#B0B0B0"
                    android:textSize="10sp"
                    android:layout_marginStart="2dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- First Connected User (expandable) -->
    <LinearLayout
        android:id="@+id/overlay_user_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:paddingTop="8dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="4dp"
        android:background="@drawable/user_badge_background"
        android:visibility="gone"
        android:gravity="center_vertical">

        <View
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:background="@drawable/user_indicator"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="8dp">

            <TextView
                android:id="@+id/overlay_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User"
                android:textColor="#FFFFFF"
                android:textSize="11sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/overlay_user_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Idle"
                android:textColor="#C0C0C0"
                android:textSize="10sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
