<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:minHeight="120dp"
    android:orientation="vertical"
    android:background="@drawable/overlay_background"
    android:padding="12dp"
    android:elevation="8dp">

    <!-- Main Status Row: Icon on left, text on right -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Activity Icon -->
        <ImageView
            android:id="@+id/overlay_activity_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@android:drawable/ic_menu_recent_history"
            android:tint="#2196F3"
            android:contentDescription="Activity icon"
            android:layout_gravity="top"/>

        <!-- Status Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/overlay_self_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Me"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/overlay_self_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Idle"
                android:textColor="#E0E0E0"
                android:textSize="12sp"
                android:layout_marginTop="2dp"
                android:maxLines="2"
                android:ellipsize="end"/>

            <!-- Connected Count Badge -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical">

                <View
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:background="@drawable/connection_indicator"/>

                <TextView
                    android:id="@+id/overlay_connected_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#4CAF50"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:layout_marginStart="6dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" connected"
                    android:textColor="#B0B0B0"
                    android:textSize="10sp"
                    android:layout_marginStart="2dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Connected Users Container -->
    <LinearLayout
        android:id="@+id/overlay_users_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:visibility="gone">

        <!-- User 1 -->
        <LinearLayout
            android:id="@+id/overlay_user1_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="6dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="6dp"
            android:background="@drawable/user_badge_background"
            android:layout_marginBottom="4dp"
            android:visibility="gone"
            android:gravity="center_vertical">

            <View
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:background="@drawable/user_indicator"
                android:layout_gravity="top"
                android:layout_marginTop="4dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="8dp">

                <TextView
                    android:id="@+id/overlay_user1_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="User"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/overlay_user1_activity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Idle"
                    android:textColor="#C0C0C0"
                    android:textSize="10sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- User 2 -->
        <LinearLayout
            android:id="@+id/overlay_user2_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="6dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="6dp"
            android:background="@drawable/user_badge_background"
            android:layout_marginBottom="4dp"
            android:visibility="gone"
            android:gravity="center_vertical">

            <View
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:background="@drawable/user_indicator"
                android:layout_gravity="top"
                android:layout_marginTop="4dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="8dp">

                <TextView
                    android:id="@+id/overlay_user2_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="User"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/overlay_user2_activity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Idle"
                    android:textColor="#C0C0C0"
                    android:textSize="10sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- User 3 -->
        <LinearLayout
            android:id="@+id/overlay_user3_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="6dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="6dp"
            android:background="@drawable/user_badge_background"
            android:layout_marginBottom="4dp"
            android:visibility="gone"
            android:gravity="center_vertical">

            <View
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:background="@drawable/user_indicator"
                android:layout_gravity="top"
                android:layout_marginTop="4dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="8dp">

                <TextView
                    android:id="@+id/overlay_user3_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="User"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/overlay_user3_activity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Idle"
                    android:textColor="#C0C0C0"
                    android:textSize="10sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- More users indicator -->
        <TextView
            android:id="@+id/overlay_more_users"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+2 more"
            android:textColor="#B0B0B0"
            android:textSize="10sp"
            android:textStyle="italic"
            android:gravity="center"
            android:padding="4dp"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>
